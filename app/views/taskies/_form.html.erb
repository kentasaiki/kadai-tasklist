<%= form_for(tasky) do |f| %>
  <% if tasky.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% tasky.errors.full_messages.each do |tasky| %>
          <li><%= tasky %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>
